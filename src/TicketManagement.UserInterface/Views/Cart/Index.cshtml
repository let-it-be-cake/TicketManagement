@using TicketManagement.UserInterface.Models.ViewModels;

@model IEnumerable<CartViewModel>


<div asp-validation-summary="ModelOnly"></div>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(o => o.Name)</th>
        <th>@Html.DisplayNameFor(o => o.Description)</th>
        <th>@Html.DisplayNameFor(o => o.StartEventDate)</th>
        <th>@Html.DisplayNameFor(o => o.EndEventDate)</th>
        <th>@Html.DisplayNameFor(o => o.Number)</th>
        <th>@Html.DisplayNameFor(o => o.Row)</th>
        <th>@Html.DisplayNameFor(o => o.Price)</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var evnt in Model)
    {
        <tr>
            <td>@evnt.Name</td>
            <td>@evnt.Description</td>
            <td>@evnt.StartEventDate</td>
            <td>@evnt.EndEventDate</td>
            <td>@evnt.Number</td>
            <td>@evnt.Row</td>
            <td>@evnt.Price</td>
            <td><img class="img-thumbnail" src="~/images/@evnt.ImageUrl" alt="Alternate Text" /></td>
            <td>
                <form asp-action="Remove" asp-route-id="@evnt.Id" method="post">
                    <button type="submit" class="deleteButton btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>

<form asp-action="Buy" method="post">
    <button class="btn btn-sm btn-outline-info">Купить</button>
</form>