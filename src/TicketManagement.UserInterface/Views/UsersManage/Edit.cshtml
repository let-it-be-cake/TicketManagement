@using TicketManagement.UserInterface.Models.ViewModels
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Local

@model AdminEditViewModel

@{
    ViewBag.Title = Local["Title"];
}

<form method="post" asp-action="Edit">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Name"></label><br />
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Surname"></label><br />
        <input asp-for="Surname" />
        <span asp-validation-for="Surname"></span>
    </div>
    <div>
        <label asp-for="Email"></label><br />
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Money"></label><br />
        <input asp-for="Money" />
        <span asp-validation-for="Money"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="@Local["Save"]" class="btn btn-outline-secondary" />
    </div>
</form>