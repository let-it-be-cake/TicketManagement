@using ThirdPartyEventEditor.Models;

@model IEnumerable<ThirdPartyEventViewModel>

@{
    ViewBag.Title = "View";
}

<h2>Events</h2>

<p>
    @Html.ActionLink("Create New", "Create", "Events", new object(), new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PosterImage)
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            <img class="img-thumbnail img-thumbnail-size" src="@item.PosterImage" alt=""/>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", "Events", new { id = item.Id }, new { @class = "btn btn-primary" })
        </td>
        <td>
            @Html.ActionLink("Details", "Details", "Events", new { id = item.Id }, new { @class = "btn btn-info" })
        </td>
        <td>
            @Html.ActionLink("Delete", "DeleteInfo", "Events", new { id = item.Id }, new { @class = "btn btn-warning" })
        </td>
    </tr>
}

</table>
